---
import { Calendar, Clock, ArrowRight } from "@lucide/astro";

const {frontmatter, url} = Astro.props;

const {title, description, category, date, readTime} = frontmatter
---

<a href={url} class="block">
    <div class="border border-neutral-800 space-y-4 p-5 bg-neutral-900 cursor-pointer hover:bg-neutral-950 hover:border-neutral-700 transition duration-250 group">

        <h2 class="text-xs uppercase text-neutral-400">{category}</h2>

        <h1 class="text-2xl group-hover:text-neutral-400 transition duration-250">{title}</h1>

        <p class="text-neutral-400">{description}</p>

        <hr class="text-neutral-800">

        <div class="flex justify-between items-center">
            <div class="flex gap-4 text-neutral-400 text-xs">
                <div class="flex items-center gap-1">
                    <Calendar size={12}/>
                    <span>{date}</span>
                </div>
                <div class="flex items-center gap-1">
                    <Clock size={12}/>
                    <span>
                        {readTime} min read
                    </span>
                </div>
            </div>
            <div class="">
                <ArrowRight size={16} class="text-neutral-400 group-hover:translate-x-1 transition-transform duration-150"/>
            </div>
        </div>
    </div>
</a>