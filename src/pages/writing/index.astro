---
import Layout from "../../layouts/Layout.astro"
import PostCard from "../../components/PostCard.astro"
import { formatPosts } from "../../constants"

const allPosts = await Astro.glob('./*.md')


const formattedPosts = formatPosts(allPosts);


---

<Layout title="Sahilow Writing" description='Thoughts an ideas of Sahilo'>
	<section class="max-w-6xl mx-auto px-5">
        <div class="pt-22 md:pt-36">
            <h1 class="text-2xl md:text-3xl mb-4">Writings</h1>
            <hr class="text-neutral-800"/>
        </div>
   
        <div class="mt-6 grid grid-cols-1 md:grid-cols-2 gap-5">
            {
                formattedPosts.map((post : any) => <PostCard frontmatter={post.frontmatter} url={post.url}/>)
            }
        </div>
    </section>
</Layout>
